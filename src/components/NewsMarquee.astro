---
// No server-side code needed
---

<div class="bg-[#0D132D] text-white p-2 overflow-hidden">
  <div class="marquee">
    <div id="marquee-content" class="marquee-content opacity-0 transition-opacity duration-300">
      <a href="#" class="mx-8">Loading latest Doge news...</a>
    </div>
  </div>
</div>

<script>
  const CACHE_KEY = 'doge_news_cache';
  const CACHE_DURATION = 12 * 60 * 60 * 1000; // 12 hours

  async function fetchAndUpdateNews() {
    const content = document.getElementById('marquee-content');
    if (!content) return;

    try {
      // Check cache first
      const cached = localStorage.getItem(CACHE_KEY);
      if (cached) {
        const { data, timestamp } = JSON.parse(cached);
        if (Date.now() - timestamp < CACHE_DURATION) {
          updateMarquee(data);
          content.classList.remove('opacity-0');
          return;
        }
      }

      const { fetchRSSFeed } = await import('../lib/rss');
      const news = await fetchRSSFeed();
      
      // Cache the results
      localStorage.setItem(CACHE_KEY, JSON.stringify({
        data: news,
        timestamp: Date.now()
      }));

      updateMarquee(news);
      content.classList.remove('opacity-0');
    } catch (error) {
      console.error('Failed to fetch news:', error);
      content.classList.remove('opacity-0');
    }
  }

  function updateMarquee(news) {
    const content = document.getElementById('marquee-content');
    if (!content) return;

    const newsHtml = news.map(item => `
      <a
        href="${item.link}"
        target="_blank"
        rel="noopener noreferrer"
        class="mx-8 hover:text-blue-300 transition-colors"
      >
        ${item.title} â€¢
      </a>
    `).join('');

    content.innerHTML = newsHtml + newsHtml; // Double for continuous scroll
  }

  // Initialize as soon as possible
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', fetchAndUpdateNews);
  } else {
    fetchAndUpdateNews();
  }
</script>

<style>
  .marquee {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .marquee-content {
    display: inline-block;
    white-space: nowrap;
    animation: marquee 580s linear infinite;
    position: relative;
    transform: translateX(0);
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
</style>