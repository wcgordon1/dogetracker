---
interface Stat {
  label: string;
  value: number;
  link: string;
}

const stats: Stat[] = [
  { label: "Spending Saved", value: 0, link: "/spending" },
  { label: "Positions Eliminated", value: 0, link: "/positions" },
  { label: "Departments Reduced", value: 0, link: "/departments" },
  { label: "Lawsuits Filed", value: 3, link: "/lawsuits" }
];
---
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 p-6 bg-white">
  {stats.map(stat => (
    <a 
      href={stat.link} 
      class="text-center p-4 hover:bg-gray-50 rounded-lg transition-colors duration-300 group"
    >
      <div class="text-3xl font-bold text-[#0D132D] group-hover:text-blue-600 transition-colors">
        {stat.value}
      </div>
      <div class="text-gray-600 group-hover:text-blue-600 transition-colors">
        {stat.label}
      </div>
    </a>
  ))}
</div>